    <title>JTPFOOTWARE"s Invoice</title>
  </head>
  <body>


    <h1 style="text-align: center;">INVOICE</h1>

   

    <div class="container bootstrap snippets bootdey">
        
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row ">
                    <div class="col-md-3 col-sm-3 text-left">
                        <h4><strong></strong> Details</h4>
                        <ul class="list-unstyled">
                            <li><strong> Name:</strong> <%=report.user%></li>
                            <li><strong>Delivered Address:</strong> <%=report.deliveryDetails%></li>
                            <li><strong>Date:</strong> <%=report.date.toISOString().substring(0,10)%></li> 
                            
                        </ul>
                    </div>
    
                     <div class="col-md-6 col-sm-6 text-right">
                        <ul class="list-unstyled">
                            <li><strong>JTP FOOTWARE'S</strong></li>
                            <li><strong>Phone:</strong> 9037731597 </li>
                            <li><strong>Email:</strong> jtpfootware@yourname.com</li>
                            <li><strong>FAX:</strong> 1-800-565-2390</li>
                        </ul>
    
                    </div>
    
                </div>
    
                <div class="table-responsive">
                    <table class="table table-condensed nomargin">
                        <thead>
                            <tr>
                                <th>sl</th>
                                <th>Item Name</th>
                                <th></th>
                                <th></th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                
                                <th>Details</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((value,index)=>{%>


                            <tr>
                                <td><%= index+1%></td>
                                <td>
                                <div><strong><%=value.productId.name %></strong></div>
                                </td>
                                <td></td>
                                <td></td>
                                
                                <td><%=value.count %></td>
                                <td><%=value.productId.price %></td>
                                
                                <td><%= value.productId.id%></td>
                                td><%=report.user%></td>
                            </tr>
                       
                          
                            <%})%>
                        </tbody>
                    </table>
                </div>
                
                <hr class="nomargin-top">
                <div class="row">
                
    
                    <div class="col-sm-6 text-right">
                        <ul class="list-unstyled">
                            <li><strong>Sub - Total Amount:</strong><%=report.totalAmount%></li>
                            <li><strong>Discount:</strong> 00.0%</li>
                            <li><strong>Grand Total:</strong> <%=report.totalAmount%></li>
                        </ul>     
                    </div>
                </div>
            </div>
        </div>
    
        <div class="panel panel-default text-right">
            <div class="panel-body">
                <% if(report.status== "canceled"){%>

                    <h3 style="color: red;">This order Cancelled..</h3>
                    
                    <%}else{%>
                        
                        <h3>Thank You Visit Again..</h3>
                        
                 
                        <%}%>
                <!-- <a class="btn btn-warning" href="#"><i class="fa fa-pencil-square-o"></i> EDIT</a>
                <a class="btn btn-primary" href="#"><i class="fa fa-check"></i> SAVE</a>
                <a class="btn btn-success" href="page-invoice-print.html" target="_blank"><i class="fa fa-print"></i> PRINT INVOICE</a> -->
            </div>
        </div>
    </div>  
 
