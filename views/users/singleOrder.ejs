<%-include('../partials/userHeader.ejs')%>
<main>
    <!-- Hero Area Start-->
    
    <!--================ confirmation part start =================-->

    <section class="confirmation_part mt-5">
      <div class="container">

   
        
        <div class="row">
          <div class="col-lg-12">
            
            <div class="order_details_iner">
              <div class="order_box">
                <h3> <u>Customer Address</u></h3>
             
                <%= orderData.deliveryDetails%>
           
                
              </div>
              <br>
              <h3>Order Details</h3>
              
              <table class="table table-borderless" style="border-collapse: separate; border-spacing: 0 10px; border: 2px solid black;">

                <thead>
                  <tr>  
                    <th>sl</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product image</th>

                    <th scope="col">Quantity</th>
                    <th scope="col">Status</th>
                    <th scope="col"> Amount</th>


                  </tr>
                </thead>
                <hr>
                <tbody>
                  
                  <%  product.forEach((value,index)=>{%>
                  
                  <tr>
                    <td><%=index+1%> </td>
                    <td><%=value.productId.name%></td>
                    <td> <a href="/product_details?id=<%=value.productId._id%>"><img style="width: 50px;height: 50px; margin-right: 20px;" src="<%=value.productId.image%>" alt=""></a>
                    </td>
                    <td><%= value.count%></td>
                  
                    
                  <td ><%= orderData.status%></td>
                  <td><%= value.productId.price%></td>
                    
                    
                  </tr>
                  
                  <%})%>
                  
                 
                  
            
                </tbody>

                
              </table>

              
            </div>
          </div>
        

          
        
        
      </div>
      <br>
      <hr>
      <div class="row">
    
      <div  class="col-lg-12 ">
        <div class="order_box">
          <h2>Your Order Payement Deatails</h2>
          
          <ul class="list list_2">
            <li>
              <a style="font-size: large;">Subtotal
                <span>RS :<%=orderData.totalAmount%></span>
              </a>
            </li>
           
            </li> 
            <li>
         
              <a >Total 
              <span id="total1">RS :<%=orderData.totalAmount%></span>  
              </a>
            
            </li>
          </ul>
         
           
        </div> 
      </div>
          
    </div>
      </div>
    </section>
    
    <!--================ confirmation part end =================-->
</main>
<%-include('../partials/userFooter.ejs')%>