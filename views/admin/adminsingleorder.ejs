<%-include('../partials/adminHead.ejs')%>
<main class="h-full pb-16 overflow-y-auto">
  <div class="container grid px-6 mx-auto">
    <br>
    <div class="grid gap-6 mb-8 md:grid-cols-2 min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
      <h4 class="mb-4 font-semibold text-gray-600 dark:text-gray-300">
        Customer Address: -
        <%=orderData.deliveryDetails%>
      </h4>
      <h4 class="mb-4 font-semibold text-gray-600 dark:text-gray-300">
        Customer Name: - <%= orderData.user%>
      </h4>
    </div>

    <div class="container mx-auto px-4 sm:px-8">
      <main class="my-8">
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Order Details</h1>
        </div>

        <div class="w-full overflow-hidden rounded-lg shadow-xs">
          <div class="w-full overflow-x-auto">
            <table class="w-full whitespace-no-wrap">
              <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                  <th class="px-4 py-3">SL</th>
                  <th class="px-4 py-3">Order ID</th>
                  <th class="px-4 py-3">Product Name</th>
                  <th class="px-4 py-3">Quantity</th>
                  <th class="px-4 py-3">Method</th>
                  <th class="px-4 py-3">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                <hr>
                <% product.forEach((value, index) => { %>
                <tr class="text-gray-700 dark:text-gray-400">
                  <td class="px-4 py-3"><%= index+1 %></td>
                  <td class="px-4 py-3"><%= value._id %></td>
                  <td class="px-4 py-3"><%= value.productId.name %></td>
                  <td class="px-4 py-3"><%= value.count %></td>
                  <td class="px-4 py-3"><%= orderData.paymentMethod %></td>
                  <td class="px-4 py-3"><%= orderData.status %></td>
                </tr>
                <tr>
                  <td colspan="5">
                    <div class="grid gap-6 mb-8 md:grid-cols-2 min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
                      <h4 class="mb-4 font-semibold text-gray-600 dark:text-gray-300">
                        Product Image
                        <img style="width: 200px; height: auto;" src='<%= value.productId.image %>' alt="">
                      </h4>
                      <p class="text-gray-600 dark:text-gray-400">
                        Description: <%= value.productId.description %>
                      </p>
                    </div>
                    <hr>
                  </td>
                </tr>
                <% }) %>
              

            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
  

<%-include('../partials/adminFooter.ejs')%>